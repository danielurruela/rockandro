				background cafe-clarito
				border 7px solid #bc9486
				border-radius 3px
				margin 0 auto
				padding 29px 10px 10px	
				position relative
				width 321px	
				.last-cloud
					position absolute
					right: -33px
					bottom: -38px
						
				.single-step
					border-bottom 1px dotted coffee		
					margin 0 0 10px
					.step-image
						float left
					.step-text
						float left
						margin 10px 0 0 10px
						padding 0 0 10px 0
						h2
							font-family 'Oswald', sans-serif
							font-size 30px						
							font-weight 700
							margin 0
							padding 0
							text-transform uppercase
							letter-spacing 1px
							a
								background url('img/arrow-right.png') left center no-repeat								
								color coffee
								padding-left 10px
								transition all 0.1s ease-out
								-webkit-transition 0.1s all ease-out
								background-size: 7px
							a:hover 
								color orange
								padding-left 15px
								background url('img/arrow-right.png') left center no-repeat
								background-size: 10px
							
						p
							font-size 11px
							margin 0
							padding 0
							text-transform uppercase
				.single-step:last-child
					border-bottom: none;

/*==== MAIN CONTENT ===*/

.main-content
	width container
	margin 0 auto
	position: relative;
	top: -5px;	
	.foot-image
		position relative
		bottom -23px
		left -10px
	.module.main-module 
		padding 10px
		.main-video
			width 459px
			background url('img/video-background.png') left top no-repeat
			position relative
			height 335px
			margin 20px auto
