					top -20px

	.media-content
		float left
		margin-left 30px
		.galeria 
			width 232px
		h2
			color orange
			font-size 24
			text-transform uppercase
			font-weight 700
			font-family 'Oswald',sans-serif
			margin 0
		.image-galeria
			float left
			width 111px
			height 111px
			background #fff
			margin 5px 5px 0 0
		.social-buttons
			margin 20px 0 0 0
			.social-icon
				display inline-block
				width 47px
				height 66px
				margin 10px 10px 0 0
			.twitter
				background url('img/twitter-icon.png') left top no-repeat;
				transition all 0.2s ease-out
				position relative
				-webkit-transition all 0.1s ease-out
			.twitter:hover
				background url('img/twitter-icon-hover.png') left top no-repeat;
				top -3px
			.facebook
				background url('img/facebook-icon.png') left top no-repeat;
				transition all 0.1s ease-out
				position relative				
				-webkit-transition all 0.1s ease-out
			.facebook:hover
				background url('img/facebook-icon-hover.png') left top no-repeat;				
				top -3px
			.youtube
				background url('img/youtube-icon.png') left top no-repeat;
				transition all 0.1s ease-out
				position relative				
				-webkit-transition all 0.1s ease-out
			.youtube:hover
				background url('img/youtube-icon-hover.png') left top no-repeat;
				top -3px				
			.rss
				background url('img/rss-icon.png') left top no-repeat;
				transition all 0.1s ease-out
				position relative				
				-webkit-transition all 0.1s ease-out
			.rss:hover
				background url('img/rss-icon-hover.png') left top no-repeat;												
				top -3px				

