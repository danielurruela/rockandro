/*==== VARIABLES ===*/

orange = #e78814
coffee = #473023
blue = #104e83
container = 1024px
vendor-prefixes = o ms moz webkit
cafe-clarito = #fcf3e1
borde-cafe = #bc9486


/*==== GENERAL STLYES ===*/

a,
a:hover
	text-decoration none

h1
	color coffee
	font-size 34px
	font-weight 700
	font-family 'Oswald',sans-serif
	letter-spacing -0.5px

body
	background url('img/fondo.jpg') center top no-repeat
	color coffee
	font-family 'Lato', sans-serif
	font-size 16px
	line-height 23px

/*==== NAVIGATION ===*/

header 
	margin 0 auto
	width container	

nav.main-nav 
	background url("img/barra-menu.png") center top no-repeat
	height 83px
	margin 105px auto 0
	position relative
	width: 945px;
	ul
		height 55px
		padding 0 20px 0 35px
		margin 10px 0 0
		li
			display inline-block		
			a
				color white
				display inline-block
				font-family 'Oswald', sans-serif			
				font-size 14px
				font-weight 700			
				line-height 55px
				margin-right: 26px
				text-transform uppercase
				transition all 0.2s ease-out
				position relative
				-webkit-transition 0.2s all ease-out
			a:hover
				color orange
				top -1px
				border-bottom 3px solid white
	figure.logo
		margin-left -117px
		left 50%			
		position absolute
		top -90px		
		width 221px

.transparent-border
	background-color: rgba(255,246,232,0);
	border-radius 3px
	-webkit-box-shadow: 0 0 8px 1px rgba(0,0,0,.53), inset 0 0 16px rgba(255,255,255,.45);
	-moz-box-shadow: 0 0 8px 1px rgba(0,0,0,.53), inset 0 0 16px rgba(255,255,255,.45);
	box-shadow: 0 0 8px 1px rgba(0,0,0,.53), inset 0 0 16px rgba(255,255,255,.45);
	padding 5px
	margin 0 0 44px 0

	.module
		background cafe-clarito
		border 4px solid borde-cafe
		border-radius 3px
		position relative		

/*==== INTRO ===*/

.intro
	margin 50px 0 0 0
	position relative
	.rag-illustration
		position relative
		left -30px
	.registration-module
		position absolute
		right 0
		top 0
		.steps
			position relative
			width 333px
			.poring-clouds
				position absolute
				left: -70px
				top: -56px
				z-index: 1
			.wood-add
				position absolute
				left: 32px
				top: -163px
			.transparent-border
				background-color: rgba(255,246,232,0);
